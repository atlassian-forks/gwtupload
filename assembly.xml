<assembly>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>/gwtupload-${project.version}</baseDirectory>
  <files>
   <file>
     <outputDirectory>/</outputDirectory>
     <source>core/target/gwtupload-${project.version}.jar</source>
   </file>
   <file>
     <outputDirectory>/</outputDirectory>
     <source>gae/target/gwtupload-gae-${project.version}.jar</source>
   </file>
   <file>
     <outputDirectory>/</outputDirectory>
     <source>jsupload/target/jsupload-${project.version}.zip</source>
   </file>
   <file>
     <outputDirectory>/</outputDirectory>
     <source>samples/target/gwtupload-samples-${project.version}.war</source>
   </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README.TXT</include>
        <include>LICENSE</include>
        <include>pom.xml</include>
        <include>assembly.xml</include>
        <include>core/src/**</include>
        <include>core/pom.xml</include>
        <include>gae/src/**</include>
        <include>gae/pom.xml</include>
        <include>jsupload/src/**</include>
        <include>jsupload/pom.xml</include>
        <include>jsupload/assembly.xml</include>
        <include>samples/src/**</include>
        <include>samples/pom.xml</include>
        <include>core/target/site/apidocs/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>core/target/site/apidocs</directory>
      <outputDirectory>/docs</outputDirectory>
    </fileSet>

  </fileSets>

</assembly>
